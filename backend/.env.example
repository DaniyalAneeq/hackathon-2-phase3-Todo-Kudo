# Database Configuration
# Get this from Neon Console: https://console.neon.tech/
# Format: postgresql+asyncpg://user:password@host/dbname?sslmode=require
DATABASE_URL=postgresql+asyncpg://YOUR_NEON_USER:YOUR_NEON_PASSWORD@YOUR_NEON_HOST/YOUR_DATABASE_NAME?sslmode=require

# Database Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE=3600

# Better Auth Secret
# IMPORTANT: Use the SAME secret in frontend/.env.local
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=YOUR_SECRET_KEY_MIN_32_CHARS_REPLACE_THIS

# CORS Settings
# Allow requests from frontend origin
CORS_ORIGINS=http://localhost:3000

# Environment
ENVIRONMENT=development

# API Configuration (Optional)
API_HOST=0.0.0.0
API_PORT=8000
